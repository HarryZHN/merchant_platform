/* 首页样式 */

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx 0;
  background-color: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
}

.icon-search {
  color: #999;
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

/* 轮播图样式 */
.banner {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.banner swiper {
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 功能导航样式 */
.nav-bar {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-item text {
  font-size: 26rpx;
  color: #666;
}

/* 区块样式 */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}

.section-title text:first-child {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-title .more {
  font-size: 26rpx;
  color: #999;
}

/* 商家列表样式 */
.merchant-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.merchant-card {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.merchant-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.merchant-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.merchant-meta .score {
  font-size: 26rpx;
  color: #ff9500;
}

.merchant-meta .distance {
  font-size: 26rpx;
  color: #999;
}

.merchant-tags {
  display: flex;
  flex-wrap: wrap;
}

.merchant-tags .tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 12rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

/* 商品网格样式 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 280rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b81;
  margin-bottom: 6rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多样式 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 响应式调整 */
@media (min-width: 768rpx) {
  .product-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* 动画效果 */
.merchant-card,
.product-card {
  transition: transform 0.2s;
}

.merchant-card:active,
.product-card:active {
  transform: scale(0.98);
}