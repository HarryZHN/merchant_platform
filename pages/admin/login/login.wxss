/* 管理员登录页面样式 */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.login-box {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx;
  margin: auto;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

/* Logo区域 */
.logo-container {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  background-color: #f5f5f5;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 表单样式 */
.form {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-item input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-item input::placeholder {
  color: #999;
}

.form-item input:focus {
  border-color: #667eea;
  outline: none;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  opacity: 0.9;
}

.login-btn[disabled] {
  background: #ccc;
}

/* 底部信息 */
.footer {
  text-align: center;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 动画效果 */
.login-box {
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式调整 */
@media (min-width: 768rpx) {
  .login-box {
    padding: 80rpx;
    max-width: 700rpx;
  }
  
  .title {
    font-size: 48rpx;
  }
  
  .subtitle {
    font-size: 32rpx;
  }
}

/* 输入框聚焦动画 */
.form-item input {
  transition: border-color 0.3s;
}

/* 按钮悬停效果 */
.login-btn {
  transition: all 0.3s;
}

.login-btn:not([disabled]):hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.4);
}