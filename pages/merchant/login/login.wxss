/* 商家登录页面样式 */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 60rpx 40rpx;
  background-color: #f5f5f5;
}

/* Logo区域 */
.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  padding-top: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 表单区域 */
.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 28rpx 0;
  margin-bottom: 20rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input-group input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.input-group input::placeholder {
  color: #999;
}

/* 选项区域 */
.options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
}

checkbox {
  transform: scale(0.8);
}

.forgot-password {
  font-size: 26rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn {
  background-color: #ff6b81;
  color: #fff;
  font-size: 32rpx;
  border-radius: 60rpx;
  margin-top: 40rpx;
  padding: 24rpx 0;
}

.login-btn:active {
  background-color: #ff5267;
}

.login-btn[disabled] {
  background-color: #ccc;
}

/* 注册区域 */
.register-section {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.register-link {
  color: #ff6b81;
  margin-left: 10rpx;
  font-weight: bold;
}

/* 提示信息 */
.tips {
  text-align: center;
  margin-top: 60rpx;
  font-size: 24rpx;
  color: #999;
}

/* 响应式调整 */
@media (min-width: 768rpx) {
  .container {
    padding: 100rpx;
  }
  
  .logo-container {
    padding-top: 120rpx;
  }
  
  .form-container {
    padding: 60rpx;
  }
}

/* 动画效果 */
.form-container {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}