/* 购物车页面样式 */

/* 商家信息栏 */
.merchant-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.merchant-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.merchant-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 购物车列表 */
.cart-list {
  background-color: #fff;
  padding-bottom: 20rpx;
}

.cart-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-checkbox {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
}

.item-quantity {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #666;
}

.quantity-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}

.quantity-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
}

.quantity-input {
  width: 80rpx;
  height: 48rpx;
  text-align: center;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-cart text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  background-color: #ff6b81;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
}

/* 底部结算栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  display: flex;
  align-items: baseline;
}

.total-text {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b81;
  font-weight: bold;
}

.settle-btn {
  background-color: #ff6b81;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
}

/* 提示 */
.tip {
  text-align: center;
  padding: 20rpx 0 120rpx;
  font-size: 24rpx;
  color: #999;
}

/* 动画效果 */
.cart-item {
  transition: transform 0.2s;
}

.cart-item:active {
  background-color: #f8f8f8;
}

/* 左滑删除按钮样式占位 */
.delete-btn {
  position: absolute;
  right: -180rpx;
  top: 0;
  bottom: 0;
  width: 180rpx;
  background-color: #ff4d4f;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}